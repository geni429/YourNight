<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jmsys.mywallpaper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name">
        <activity
            android:name="com.yournight.stack.yournight.Splash"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yournight.stack.yournight.Main"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.yournight.stack.yournight.Post"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.yournight.stack.yournight.Write"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.yournight.stack.yournight.PostItem"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.yournight.stack.yournight.Tutorial"
            android:theme="@style/AppTheme" />

        <receiver android:name="com.yournight.stack.yournight.Widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>
    </application>

</manifest>